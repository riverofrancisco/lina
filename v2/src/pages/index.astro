---
import Layout from "../layouts/Layout.astro";
import LinaCard from "../components/Cards/LinaCard.astro";
import PhotoLayout from "../layouts/PhotoLayout.astro";
---

<PhotoLayout title="Lina Rivero Links">
  <main>
    <h1><span class="text-gradient">Lina Rivero</span></h1>
    <h2><span class="text-gradient">BE OUR GUEST</span></h2>

    <ul role="list" class="link-card-grid">
      <LinaCard
        link="/socialmedia" 
        title="Lina en Redes sociales"
        logo="add"
      />
    
      <LinaCard
        link="https://open.spotify.com/artist/3binED05LZgUfuz7ODLCMX?si=9yS8RHbTTEieMvOW7aygig"
        title="Escucha mis canciones"
        logo="spoty"
      />
      <LinaCard link="/contact" title="Contratar Show" logo="mail" />
      <LinaCard link="/home" title="Ver MÃ¡s" logo="sing" />
    </ul>
  </main>
</PhotoLayout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: #a6877c;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  h2 {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>

---
import ButtonHome from "../components/General/ButtonHome.astro";
import Pagination from "../components/General/pagination.astro";
import Layout from "../layouts/Layout.astro";
import Gallery from '../components/Gallery/Pages/Gallery.astro'
import Welcome from "../components/Gallery/Cards/VideoWelcome.astro";
import { HomeCarousel } from "../components/Gallery/Carousel/Carousel";
import { EventsPageContent } from "../components/Events/Pages/EventsPageCont";
---

<Layout title="Lina Rivero" >
<HomeCarousel client:visible/>
<EventsPageContent inHome={true} client:only="react" />
<Gallery />

<Pagination prev="/contact" next="/bepartof" />
</Layout>

<style>
  .Container { 
    display: grid;
    margin-top: 10px;
    grid-template-columns: 1fr 2fr;

    column-span: 20;
    width: 100vw;
    padding-left: 10%;
    padding-right: 10%;
  }

  h1 {
    font-size: 4rem;
    color: #a6877c;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  h2 {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1;
    color: #a6877c;
    text-align: center;
    margin-bottom: 1em;
  }
  div {
    color: white
  }
</style>

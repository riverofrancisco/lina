    box-shadow: none;
  }

  @media (max-width: 300px) {
  .follow {
    flex-direction: column;
    padding: 10px;
    align-items: center;
  }}

  @keyframes fadeIn2 {
    from{
      opacity: 0;
    }
    to{
      opacity: 0.8;
    }
    
  }
</style>

---
import Icon from "../Icon.astro";

interface LinaCard {
  title: string;
  link: string;
  logo: string;
}

const { title, link, logo } = Astro.props;

let targetType: string = "";
if (link[0] != "/") {
  targetType = "_blank";
}
---

<div class="link-card">
  <a href={link} target={targetType} rel="noopener noreferrer">
    <h2>
      {title}
    </h2>
    <Icon icon=`${logo}` />
  </a>
</div>

<style>
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: row;
    padding: 2px;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 3s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 2px 2px 1px 1px rgba(255, 254, 254, 0.1);
  }
  .link-card > a {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 1.4;
    padding: calc(1.1rem - 1px);
    border-radius: 8px;
    color: #ffd0bf;
    opacity: 1;
  }
  
  h2 {
    font-size: 1.25rem;
    text-shadow: 1px 1px black;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: linear-gradient(135deg, #794f40 0%, #d29090 50%, #533a2b 100%);;
  }


  @keyframes fadeIn {
    from{
      opacity: 0
    }
    to {
      opacity: 1
    }
  }

</style>

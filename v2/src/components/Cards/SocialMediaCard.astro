---
import Icon from "../Icon.astro"

interface SocialMediaCard {
    logo: string
    title: string
    link: string
    color: string
}

const {logo, link, color, title, user} = Astro.props


---

<div class="media-card">
  <div class="flex flex-col" >
    <h2>{title}</h2>
    <p></p>
  </div>

  <a href={link} target="_blank" rel="noopener noreferrer">
    <Icon icon=`${logo}` />
  </a>
</div>

<style>
  .media-card{
    display: flex;
    background: #262626;
    margin: 10px;
    opacity: 0.9;
    padding: 10px;
    border-radius: 15px;
    box-shadow: 1px 1px 1px black;
    animation: fadeIn 2s;
    transition: transform .5s ease
  }

  .media-card:is(:hover, :focus-within) {
    transform: scale(1.02);
  }

  @keyframes fadeIn {
    from{
      opacity: 0;
    }
    to{
      opacity: 0.9;
    }
    
  }
</style>

---
import Icon from "../../General/Icon.astro"
import {ContactForm} from "../Forms/ContactForm"
import pic from '../../../../public/data/pictures/carousel/corrientes.jpg'
---

<div class="contact-section">
    <div class="contact-info">
        <ContactForm client:load/>
    </div>
    <div class="pic-container">
        <div class="contact-links bg-orange-50 rounded-md shadow-md">
            <div class="flex items-center"> <p class="mr-2">info@linarivero.com.ar</p> 
                <button>
                   <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-copy">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M7 7m0 2.667a2.667 2.667 0 0 1 2.667 -2.667h8.666a2.667 2.667 0 0 1 2.667 2.667v8.666a2.667 2.667 0 0 1 -2.667 2.667h-8.666a2.667 2.667 0 0 1 -2.667 -2.667z" />
                    <path d="M4.012 16.737a2.005 2.005 0 0 1 -1.012 -1.737v-10c0 -1.1 .9 -2 2 -2h10c.75 0 1.158 .385 1.5 1" />
                cd ..</svg>
                </button>
            </div>
             <div class="flex items-center">
                <Icon icon="wp" /><p class="ml-2">+549 11 12345678 </p>
                
            </div>
            
        </div>
        <img class="contact-pic" src={pic.src} alt="Corrientes, Buenos Aires"/>
    </div>
</div>

<style>
.contact-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    padding: 2% 10%;
    box-sizing: border-box;
    gap: 2rem;
}

.contact-info {
    flex: 1;
}

.contact-links {
    list-style: none;
    padding: 10%;
    margin: 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    align-self: center;
    gap: 1rem;
    font-size: 1.1rem;
    color: #333;
}

.contact-links a {
    text-decoration: none;
    transition: color 0.3s ease, text-decoration 0.3s ease;
}

.contact-links a:hover {
    text-decoration: underline;
}

.pic-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.contact-pic {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

@media (max-width: 768px) {
    .contact-section {
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 5% 5%;
        height: auto;
        gap: 2rem;
    }

    .contact-info {
        order: 2;
    }

    .pic-container {
        order: 1;
        width: 100%;
    }

    .contact-pic {
        max-width: 80%;
        margin-bottom: 2rem;
    }
}
</style>
